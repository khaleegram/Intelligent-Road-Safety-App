// Firestore rules (confidential research data)
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true;
    }

    function isNumber(value) {
      return value is int || value is float;
    }

    function isValidAccident(data, accidentId) {
      return data.keys().hasAll([
          'request_id',
          'latitude',
          'longitude',
          'timestamp',
          'severity',
          'road_type',
          'weather',
          'vehicle_count',
          'casualty_count',
          'created_at',
          'reporter_uid'
        ]) &&
        data.keys().hasOnly([
          'request_id',
          'latitude',
          'longitude',
          'timestamp',
          'severity',
          'road_type',
          'weather',
          'vehicle_count',
          'casualty_count',
          'created_at',
          'reporter_uid'
        ]) &&
        data.request_id is string &&
        data.request_id == accidentId &&
        isNumber(data.latitude) &&
        isNumber(data.longitude) &&
        data.timestamp is string &&
        data.severity is string &&
        data.road_type is string &&
        data.weather is string &&
        isNumber(data.vehicle_count) &&
        isNumber(data.casualty_count) &&
        data.created_at is string &&
        data.reporter_uid is string &&
        isSignedIn() &&
        data.reporter_uid == request.auth.uid;
    }

    match /accidents/{accidentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isValidAccident(request.resource.data, accidentId);
      allow update: if isAdmin() &&
        request.resource.data.diff(resource.data).changedKeys().hasOnly([
          'verified',
          'verified_by',
          'verified_at',
          'notes'
        ]);
      allow delete: if false;
    }

    match /hotspots/{hotspotId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() &&
        request.auth.uid == userId &&
        !('is_admin' in request.resource.data);
      allow update: if isSignedIn() &&
        request.auth.uid == userId &&
        (!('is_admin' in request.resource.data) ||
          request.resource.data.is_admin == resource.data.is_admin);
      allow delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
